---
export type Props = {
  date: Date;
};

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>

<style lang="scss">
  time {
    font-size: 1.25rem;
    color: var(--accent-light-blue);
  }
</style>
