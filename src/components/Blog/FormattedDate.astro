---
export type Props = {
  date: Date;
};

const { date } = Astro.props;
---

<time class="formatted-date" datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>

<style lang="scss">
  .formatted-date {
    color: var(--accent-light-blue);
    font-size: 0.75rem;
  }

  @media only screen and (min-width: 48em) {
    .formatted-date {
      font-size: 1rem;
    }
  }
</style>
