---
export type Props = {
  date: Date;
  isSmallText?: boolean;
};

const { date, isSmallText } = Astro.props;
---

<time
  class:list={["formatted-date", { "formatted-date--small": isSmallText }]}
  datetime={date.toISOString()}
>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>

<style lang="scss">
  .formatted-date {
    color: var(--accent-light-blue);

    &--small {
      font-size: 0.75rem;
    }
  }
</style>
