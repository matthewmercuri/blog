---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";

export type Props = {
  pageTitle?: string;
  description?: string;
};

const { pageTitle, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead pageTitle={pageTitle} description={description} />
    <slot name="add-head" />
  </head>
  <body>
    <div class="main-wrapper">
      <slot />
    </div>
    <Footer />
  </body>
</html>
